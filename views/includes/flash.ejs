<% if (error && error.length > 0) { %>
  <div style="background-color: #ffe5e5; color: #d8000c; padding: 10px; border-radius: 5px; margin: 10px 0;">
    <%= error %>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div style="background-color: #e0ffe0; color: #2e7d32; padding: 10px; border-radius: 5px; margin: 10px 0;">
    <%= success %>
  </div>
<% } %>